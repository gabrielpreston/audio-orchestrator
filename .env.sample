# discord-voice-lab example environment
# Copy this to .env.local or .env.docker (both are gitignored) and replace placeholders before running locally.

# -----------------------------
# Discord configuration
# -----------------------------
DISCORD_BOT_TOKEN="YOUR_DISCORD_BOT_TOKEN"
DISCORD_GUILD_ID="123456789012345678"
DISCORD_VOICE_CHANNEL_ID="987654321098765432"
DISCORD_AUTO_JOIN="false"
DISCORD_INTENTS="guilds,guild_voice_states"
AUDIO_ALLOWLIST=""  # optional comma-separated list of user IDs allowed to trigger wake phrases

# -----------------------------
# Audio pipeline tuning
# -----------------------------
AUDIO_VAD_THRESHOLD="40.0"
AUDIO_SILENCE_TIMEOUT="0.75"
AUDIO_MAX_SEGMENT_DURATION="15"
AUDIO_MIN_SEGMENT_DURATION="0.3"
AUDIO_AGGREGATION_WINDOW="1.5"

# -----------------------------
# STT service
# -----------------------------
STT_BASE_URL="http://localhost:9000"
STT_TIMEOUT="15"
STT_MAX_RETRIES="3"

# -----------------------------
# Wake phrase detection
# -----------------------------
WAKE_PHRASES="hey atlas,ok atlas"
ORCHESTRATOR_WAKE_PHRASES=""

# -----------------------------
# MCP integration (optional)
# -----------------------------
MCP_MANIFESTS=""
MCP_WEBSOCKET_URL=""
MCP_COMMAND_PATH=""
MCP_REGISTRATION_URL=""
MCP_HEARTBEAT_INTERVAL="30"

# -----------------------------
# Telemetry & diagnostics
# -----------------------------
LOG_LEVEL="INFO"
LOG_JSON="true"
METRICS_PORT=""
WAVEFORM_DEBUG_DIR=""
